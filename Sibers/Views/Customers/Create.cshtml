@model Sibers.Models.Customer

@{
    ViewBag.Title = "Create";
}

<h2>Добавить нового заказчика</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "regform"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Заказчик</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Имя заказчика",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="Name" id="Name"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/Validation.js">

    </script>
}
