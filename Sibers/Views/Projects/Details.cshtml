@model Sibers.Models.Project

@{
    ViewBag.Title = "Details";
}

<h2>Информация</h2>

<div>
    <h4>Проект</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Наименование проекта
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Дата начала проекта
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_of_start)
        </dd>

        <dt>
            Дата окончания проекта
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_of_end)
        </dd>

        <dt>
            Приоритет
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prority)
        </dd>

        <dt>
            Заказчик
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>

        <dt>
            Руководитель проекта
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employees.Name)
        </dd>

        <dt>
            Исполнитель
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Executor.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Редактирование", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Вернуться назад", "Index")
</p>
