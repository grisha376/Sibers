@model IEnumerable<Sibers.Models.Employees>

@{
    ViewBag.Title = "Index";
}

<h2>Информация</h2>

<p>
    @Html.ActionLink("Добавить нового", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Найти по имени: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}


<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            @Html.ActionLink("Фамилия", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            Отчество
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Редактирование", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Информация", "Details", new { id = item.ID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
